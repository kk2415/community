<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
    <Properties>
        <Property name="logName">levelUpLog</Property>
        <Property name="layoutPattern">
            %style{%mdc{traceId}}{Red}%style{%mdc{spanId}}{blue}%style{%d{yyyy-MM-dd HH:mm:ss:SSS}}{cyan} %highlight{[%-5p]}{FATAL=bg_red, ERROR=red, INFO=green, DEBUG=cyan} --- [%15.15thread] [%-40c] - %m%n
        </Property>
    </Properties>

    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false" pattern="${layoutPattern}" />
        </Console>

        <RollingFile name="file" fileName="C:\tmp\log4f2\logs\${logName}.log"
                     filePattern="C:\tmp\log4f2\logs\${logName}_%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${layoutPattern}" />
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB" /> <!-- 10MB 용량이 초과시 DefaultRolloverStrategy 정책만큼 넘버링 -->
                <TimeBasedTriggeringPolicy interval="1" /><!-- 일별 로그 파일 생성-->
            </Policies>
            <DefaultRolloverStrategy max="30" fileIndex="min" /><!-- 롤링 파일 500개 까지 생성 -->
        </RollingFile>

        <RollingFile name="error_file" fileName="C:\tmp\log4f2\error_logs\${logName}.log"
                     filePattern="C:\tmp\log4f2\error_logs\${logName}_%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${layoutPattern}" />
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB" /> <!-- 10MB 용량이 초과시 DefaultRolloverStrategy 정책만큼 넘버링 -->
                <TimeBasedTriggeringPolicy interval="1" /><!-- 일별 로그 파일 생성-->
            </Policies>
            <DefaultRolloverStrategy max="30" fileIndex="min" /><!-- 롤링 파일 500개 까지 생성 -->
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- =================================================================== -->
        <!-- MY PROJECT																 -->
        <!-- =================================================================== -->
        <logger name="com.levelup" level="debug" additivity="false">
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
	    </logger>

		<!-- =================================================================== -->
        <!-- SPRING																 -->
        <!-- =================================================================== -->
        <logger name="org.springframework" level="info" additivity="false" >
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </logger>

        <logger name="org.springframework.boot.web" level="debug" additivity="false" >
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </logger> <!--아래에 위치한게 우선순위가 다 높다-->

        <!-- =================================================================== -->
        <!-- JDBC																 -->
        <!-- =================================================================== -->
        <logger name="org.springframework.jdbc" level="warn" additivity="false" >
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </logger>

        <logger name="jdbc.sqltiming" level="warn" additivity="false" >
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </logger>

        <logger name="jdbc.sqlonly" level="warn" additivity="false" >
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </logger>

        <logger name="jdbc.connection" level="warn" additivity="false" >
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </logger>

        <logger name="jdbc.resultset" level="warn" additivity="false" >
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </logger>

        <logger name="jdbc.audit" level="warn" additivity="false" >
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </logger>

        <logger name="jdbc.resultsettable" level="warn" additivity="false" >
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </logger>

        <logger name="org.hibernate.SQL" level="info" additivity="false">
            <AppenderRef ref="console" />
        </logger>

        <!-- =================================================================== -->
        <!-- Root(Default) Setting												 -->
        <!-- =================================================================== -->
        <!-- off, fatal, error, warn, info, debug, trace, all -->
        <Root level="info" additivity="false">
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </Root>

    </Loggers>
</Configuration>